    [ { device = "/dev/disk/by-uuid/b4a52fb1-5e19-48c4-8428-46b2a89156d2"; }
    ];

  services.blueman.enable = true;
  hardware.bluetooth = {
    enable = true;
    powerOnBoot = true;
    settings = {
      General = {
